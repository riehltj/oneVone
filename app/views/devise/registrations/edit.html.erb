<div class="max-w-sm mx-auto sm:mx-0">
  <h1 class="text-2xl font-bold text-slate-900 mb-2">Edit profile</h1>
  <p class="text-slate-600 mb-6">Update your zone and hosting preference.</p>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :name, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "w-full rounded-xl border border-slate-300 px-4 py-3 text-base focus:border-green-500 focus:ring-2 focus:ring-green-500/20 min-h-[48px]" %>
    </div>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.email_field :email, autocomplete: "email", class: "w-full rounded-xl border border-slate-300 px-4 py-3 text-base focus:border-green-500 focus:ring-2 focus:ring-green-500/20 min-h-[48px]" %>
    </div>
    <div>
      <%= f.label :zone, "Part of Denver", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.select :zone, User::ZONES, { include_blank: "Select zone" }, class: "w-full rounded-xl border border-slate-300 px-4 py-3 text-base focus:border-green-500 focus:ring-2 focus:ring-green-500/20 min-h-[48px]" %>
    </div>
    <div class="flex items-center gap-3 py-2">
      <%= f.check_box :can_host, class: "rounded border-slate-300 text-green-600 focus:ring-green-500 h-4 w-4" %>
      <%= f.label :can_host, "I can host games", class: "text-sm text-slate-700" %>
    </div>
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <p class="text-xs text-slate-500 mb-1">Leave blank to keep current</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-xl border border-slate-300 px-4 py-3 text-base focus:border-green-500 focus:ring-2 focus:ring-green-500/20 min-h-[48px]" %>
    </div>
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-xl border border-slate-300 px-4 py-3 text-base focus:border-green-500 focus:ring-2 focus:ring-green-500/20 min-h-[48px]" %>
    </div>
    <div>
      <%= f.label :current_password, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <p class="text-xs text-slate-500 mb-1">Required to confirm changes</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full rounded-xl border border-slate-300 px-4 py-3 text-base focus:border-green-500 focus:ring-2 focus:ring-green-500/20 min-h-[48px]" %>
    </div>
    <%= f.submit "Update", class: "w-full rounded-xl bg-green-500 hover:bg-green-600 text-white font-semibold py-3.5 min-h-[48px] transition-colors" %>
  <% end %>

  <div class="mt-8 pt-6 border-t border-slate-200">
    <h3 class="text-sm font-medium text-slate-700 mb-2">Cancel account</h3>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "rounded-xl bg-red-50 hover:bg-red-100 text-red-700 font-medium px-4 py-2.5 text-sm" %>
  </div>
  <p class="mt-4"><%= link_to "Back", :back, class: "text-green-600 hover:text-green-700 font-medium" %></p>
</div>
