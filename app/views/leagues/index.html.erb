<h1 class="text-2xl sm:text-3xl font-bold text-slate-900 mb-1">Denver Pools</h1>
<p class="text-slate-600 mb-6 sm:mb-8">Join a rating-based pool. Set your zone, add availability, and challenge players.</p>

<div class="grid gap-4 sm:gap-5 sm:grid-cols-2 lg:grid-cols-3">
  <% @leagues.each do |league| %>
    <%= link_to league_path(league), class: "block rounded-2xl bg-white border border-slate-200 p-5 sm:p-6 shadow-sm hover:shadow-md hover:border-green-200 transition-all active:scale-[0.99] min-h-[44px]" do %>
      <div class="flex items-start justify-between gap-2 mb-3">
        <h2 class="font-bold text-lg text-slate-900"><%= league.name %></h2>
        <span class="shrink-0 rounded-full bg-green-100 text-green-700 text-xs font-semibold px-2.5 py-1">
          <%= league.rating_min %>â€“<%= league.rating_max %> DUPR
        </span>
      </div>
      <p class="text-slate-600 text-sm mb-3"><%= league.prize_description.truncate(80) %></p>
      <div class="flex items-center justify-between text-sm">
        <span class="font-semibold text-slate-900"><%= number_to_currency(league.monthly_price_cents / 100.0) %><span class="font-normal text-slate-500">/mo</span></span>
        <span class="text-slate-500"><%= league.league_memberships.count %> members</span>
      </div>
    <% end %>
  <% end %>
</div>

<p class="mt-8">
  <%= link_to "Home", root_path, class: "text-green-600 hover:text-green-700 font-medium" %>
</p>
